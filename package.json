{
  "name": "@tsumug/styleguide",
  "version": "0.0.0",
  "author": "Tsumug Inc.",
  "devDependencies": {
    "can-npm-publish": "1.1.0",
    "fixpack": "2.3.1",
    "husky": "0.14.3",
    "lerna": "^2.10.2",
    "lerna-changelog": "0.7.0",
    "lint-staged": "7.0.4",
    "prettier": "^1.12.1",
    "textlint": "10.2.1",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "lint-staged": {
    "**/package.json": [
      "fixpack",
      "git add"
    ],
    "*.{css,scss,md,js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "repository": "ssh://git@github.com/TMG-SK/styleguide.git",
  "scripts": {
    "bump": "lerna publish --skip-npm --skip-git && lerna-changelog",
    "precommit": "lint-staged",
    "release": "lerna exec --bail=false -- 'can-npm-publish && npm publish'",
    "test": "lerna run test --parallel"
  },
  "workspaces": [
    "packages/*"
  ]
}
