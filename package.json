{
  "name": "@tsumug/styleguide",
  "version": "0.0.0",
  "author": "Tsumug Inc.",
  "devDependencies": {
    "can-npm-publish": "1.3.1",
    "fixpack": "2.3.1",
    "husky": "0.14.3",
    "lerna": "3.1.1",
    "lerna-changelog": "0.8.0",
    "lint-staged": "7.2.2",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.2",
    "textlint": "11.0.0",
    "tslint": "5.11.0",
    "typescript": "3.0.1"
  },
  "lint-staged": {
    "**/package.json": [
      "fixpack",
      "git add"
    ],
    "*.{md,js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "repository": "ssh://git@github.com/TMG-SK/styleguide.git",
  "scripts": {
    "bump": "lerna publish --skip-npm --skip-git && lerna-changelog",
    "precommit": "lint-staged",
    "release": "lerna exec --bail=false -- 'can-npm-publish && npm publish'",
    "test": "lerna run test --parallel"
  },
  "workspaces": [
    "packages/*"
  ]
}
